@model Customer

@{
	ViewData["Title"] = "Customer";
}

<div class="row">
	<div class="col-md-6 offset-md-3">
		<h1>Customer</h1>
		<form asp-action="AddOrEdit" autocomplete="off">
			<input type="hidden" asp-for="CustomerId" />

			<div class="form-group">
				<label asp-for="FirstName" class="control-label"></label>
				<input asp-for="FirstName" class="form-control"></input>
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="LastName" class="control-label"></label>
				<input asp-for="LastName" class="form-control"></input>
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="PhoneNumber" class="control-label"></label>
				<input asp-for="PhoneNumber" class="form-control"></input>
				<span asp-validation-for="PhoneNumber" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Address" class="control-label"></label>
				<input asp-for="Address" class="form-control"></input>
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>

			<div class="row mt-2">
				<div class="col-md-6">
					<div class="form-group">
						<input type="submit" value="Submit" class="btn btn-primary w-100" />
					</div>
				</div>
				<div class="col-md-6">
					<a asp-action="List" class="btn btn-secondary w-100">View All Transactions</a>
				</div>
			</div>
		</form>
	</div>
</div>