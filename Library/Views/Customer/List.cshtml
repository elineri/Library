@model IEnumerable<Customer>


<div class="row">
	<div class="col-md-16 offset-md-2">
		<h1>Customers</h1>
		<table class="table">
			<thead>
				<tr>
                    <th>
                        Name
                    </th>
					@*<th>
						@Html.DisplayNameFor(model => model.LastName)
					</th>*@
					<th>
						@Html.DisplayNameFor(model => model.PhoneNumber)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Address)
					</th>
					<th>Loans</th>
					<th>
						<a asp-action="AddOrEdit" class="btn btn-sm btn-success">
                            New Customer
						</a>
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
                        <td>
                            <a asp-action="AddOrEdit" asp-route-id="@item.CustomerId">
                                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                            </a>
                            @*@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)*@
                        </td>
						
						<td>
							@Html.DisplayFor(modelItem => item.PhoneNumber)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Address)
						</td>
                        <td>
                            <p class="button">
                                <a class="btn btn-primary btn-sm" asp-controller="Loan" asp-action="List" asp-route-id="@item.CustomerId">View Loans</a>
                            </p>
                        </td>
						<td>
							<form asp-action="Delete" asp-route-id="@item.CustomerId">
								<div class="btn-group btn-group-sm">
									<a asp-action="AddOrEdit" asp-route-id="@item.CustomerId" class="btn btn-warning">
                                        <i class="fa-regular fa-pen-to-square"></i>
									</a>
                                    <button type="submit" class="btn btn-danger" onclick="return- confirm('Are you sure you want to delete this customer?')">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </button>
								</div>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
