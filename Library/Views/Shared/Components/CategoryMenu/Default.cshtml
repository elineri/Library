@model IEnumerable<Category>

<li class="drowndown">
    <a class="dropdown-toggle" data-toggle="dropdown">Categories</a>
    <ul class="dropdown.menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Book" asp-action="List" asp-route-category="@category.CategoryName">@category.CategoryName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Book" asp-action="List" asp-route-category="">View All Books</a>
        </li>
    </ul>
</li>